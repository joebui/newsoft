<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Newsoft</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">NewSoft</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav primary">
                @foreach (var a in (List<Category>)ViewBag.AllCategories)
                {
                    <li>
                        <a href="#">@a.name</a>
                    </li>
                }                                        
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-search"></span></a>
                        <ul class="dropdown-menu">
                            <form class="navbar-form">
                                <input type="text" id="search-box" class="form-control" placeholder="Search by name">
                            </form>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> Bookmark</a>
                    </li>
                    @Html.Partial("_LoginPartial")                    
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()      
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
